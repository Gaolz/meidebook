source 'https://ruby.taobao.org'
# source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-flash'
gem 'sprockets', '~> 3.0' # 用于把多个css或js文件压缩到一个文件中，类似rails的asset pipline。具体使用方法请在本项目中搜索'sprocket'即可。
gem 'sprockets-helpers'
gem 'sequel' # 操作数据库
gem 'sqlite3'
gem 'slim'
gem 'puma'
gem 'activesupport'
gem 'carrierwave' # 文件上传
gem 'carrierwave-sequel', require: 'carrierwave/sequel'
gem 'mini_magick' # 图片处理
gem 'subexec'
gem 'faraday' # API调用

group :development do
  gem 'sinatra-reloader'
end